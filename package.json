{
  "name": "ai-blog-website",
  "version": "1.0.0",
  "description": "AI-powered blog website with MERN stack",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server.js",
    "client": "cd client && npm start",
    "build": "npm run build:client",
    "build:client": "cd client && npm install && npm run build",
    "build:render": "node build-render.js",
    "heroku-postbuild": "npm run build:client",
    "install-client": "cd client && npm install",
    "install-all": "npm install && npm run install-client"
  },
  "dependencies": {
    "@google/generative-ai": "^0.2.1",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-basic-auth": "^1.2.1",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "mongoose": "^7.5.0",
    "node-cron": "^3.0.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  },

  "keywords": [
    "blog",
    "ai",
    "mern",
    "react",
    "mongodb"
  ],
  "author": "AI Blog Developer",
  "license": "MIT"
}
